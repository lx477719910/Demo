<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.application.happymusic">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission-sdk-23 android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.application.happymusic.activity.WelcomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.application.happymusic.activity.HomeActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.application.happymusic.activity.ScanActivity"
            android:label="@string/scan_music"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.application.happymusic.activity.LocalMusicActivity"
            android:label="@string/local_music"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.application.happymusic.activity.PlayActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/PlaylistActivityTheme" />
        <activity
            android:name="com.application.happymusic.activity.LastMyloveActivity"
            android:label="@string/last_play"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.application.happymusic.activity.PlaylistActivity"
            android:screenOrientation="portrait"
            android:theme="@style/PlaylistActivityTheme" />
        <activity
            android:name="com.application.happymusic.activity.ModelActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.application.happymusic.activity.ThemeActivity"
            android:label="@string/theme_center"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity android:name="com.application.happymusic.activity.AboutActivity"
            android:label="@string/about"></activity>
    </application>

</manifest>